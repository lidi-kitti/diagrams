<Page x:Class="demo.Views.Pages.HomePageClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:demo.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="600"
      Title="Окно пользователя" >

    <Grid Background="Gray" >
        <StackPanel>
             <StackPanel>
                <Label Content="Добро пожаловать!" FontSize="20" HorizontalAlignment="Center"/>
            </StackPanel>
            <StackPanel>
                <Label Content="Для создания новой заявки на починку оборудования" FontSize="15" HorizontalAlignment="Center"/>

            </StackPanel>
            <StackPanel>
                <Label Content="Для регистрации новой заявки:"  HorizontalAlignment="Center"/>
                <Button Content="Новая заявка" Background="Yellow"  Height="30" Width="110" Click="Button_Click"/>

            </StackPanel>
            <StackPanel>
                <Label Content="Для выхода из приложения:"  HorizontalAlignment="Center"/>
                <Button Content="Выйти" Background="Yellow"  Height="30" Width="110" Click="Button_Click_1"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
