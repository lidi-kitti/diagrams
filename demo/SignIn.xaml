<Window x:Class="demo.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demo"
        mc:Ignorable="d"
        Title="SignIn" Height="400" Width="400">
    <Grid Background="Gray">
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.568,0.584" Height="30" Width="144" Click="Button_Click"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="282,309,0,0" VerticalAlignment="Top" Height="21" Width="69" Click="Button_Click_1"/>
        <Label Content="ВХОД" HorizontalAlignment="Left" Margin="174,81,0,0" VerticalAlignment="Top"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="128,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.35,0.009"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="124,164,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.35,0.009"/>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Margin="196,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Password" HorizontalAlignment="Left" Margin="195,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
